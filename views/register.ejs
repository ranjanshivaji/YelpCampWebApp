        <div class="col-md-12 text-center">
            <h1>Sign UP!</h1>
        </div>
        
        <div style="width:30%; margin: 30px auto;">
            <form action="/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" id="" placeholder="username">    
                </div>
                <div class="form-group">
                    <input class="form-control"type="password" name="password" id="" placeholder="password">
                </div>
                <div class="form-group">
                    <input class="form-control"type="text" name="adminCode" id="" placeholder="Admin Code/Only for admins">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit" >SignUp </button>
                </div>
            </form>
        </div>
        
    </div>
</div>

